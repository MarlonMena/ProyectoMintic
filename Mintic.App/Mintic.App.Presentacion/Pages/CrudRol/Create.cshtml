@page
@model Mintic.App.Presentacion.Pages.CrudRol.CreateModel

@{
    ViewData["Title"] = "CrearRol";
}

<h1>Crear Rol</h1>

<div class="alert alert-info" role="alert">
   Complete el formulario y luego haga clic en el botón crear para guardar los datos.
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rol.NombreRol" class="control-label">Nombre</label>
                <select name="NombreRol" asp-for="Rol.NombreRol" class="form-control">
                    <option value="0">Seleccione un nombre de rol</option>
                    <option value="1">Administrador</option>
                    <option value="2">Formador</option>
                    <option value="3">Tutor</option>
                    <option value="4">Estudiante</option>
                </select>
                <span asp-validation-for="Rol.NombreRol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rol.CodigoRol" class="control-label">Código</label>
                <input asp-for="Rol.CodigoRol" class="form-control" placeholder="Ej: A-001"/>
                <span asp-validation-for="Rol.CodigoRol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Atras</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
