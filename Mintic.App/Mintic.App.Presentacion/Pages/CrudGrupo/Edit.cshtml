@page
@model Mintic.App.Presentacion.Pages.CrudGrupo.EditModel

@{
    ViewData["Title"] = "EditEditarGrupo";
}

<h1>Editar Grupo</h1>

<div class="alert alert-info" role="alert">
  Reemplace los datos deseados, luego haga clic en el botón enviar para guardar los cambios.
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Grupo.Id" />

            <div class="form-group">
                <label asp-for="Grupo.CodigoGrupo" class="control-label">Código</label>
                <input asp-for="Grupo.CodigoGrupo" class="form-control" placeholder="Ej: G-55" />
                <span asp-validation-for="Grupo.CodigoGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Atras</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
