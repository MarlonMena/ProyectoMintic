@page
@model Mintic.App.Presentacion.Pages.CrudGrupo.DeleteModel

@{
    ViewData["Title"] = "EliminarGrupo";
}

<h1>Eliminar Grupo</h1>

<div>
    <div class="alert alert-danger" role="alert">
        Está a punto de eliminar un grupo, está seguro de hacerlo?
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grupo.CodigoGrupo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grupo.CodigoGrupo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grupo.Formador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grupo.Formador)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grupo.Tutor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grupo.Tutor)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Grupo.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger"/> |
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
