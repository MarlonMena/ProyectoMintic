@page
@model Mintic.App.Presentacion.Pages.CrudPersona.IndexModel

@{
    ViewData["Title"] = "PERSONA";
}
<style>
  body {
      background: url("https://github.com/MarlonMena/ProyectoMintic/blob/main/Mintic.App/Iconos/Background.png?raw=true"); 
      background-size: 100;
	  background-repeat: no-repeat;
      background-position: center;
 }
 </style>

<div class="container">
    <img src="https://github.com/MarlonMena/ProyectoMintic/blob/main/Mintic.App/Iconos/LogoUCaldas.png?raw=true" align="" width="150" height="90">
    <img src="https://github.com/MarlonMena/ProyectoMintic/blob/main/Mintic.App/Iconos/LogoMintic.png?raw=true" align="" width="150" height="90">
    <img src="https://github.com/MarlonMena/ProyectoMintic/blob/main/Mintic.App/Iconos/Admin.png?raw=true" align="right" width="100" height="90">
</div>
<br>
<a class="btn btn-primary" asp-page="Create">Crear una persona</a>
<div class="panel panel-primary ">
    <div class="panel-heading">
       <h4> Lista de personas </h4>
    </div>
</div>
<table class="table table-bordered" >
    <thead style="background-color: #CCCCCC" align="center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].Nombres)
            </th>
           <th>
                @Html.DisplayNameFor(model => model.Persona[0].Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].Celular)
            </th>
           <th>
                @Html.DisplayNameFor(model => model.Persona[0].Municipio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].Fijo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].Direccion)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody align="center">
@foreach (var item in Model.Persona) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Municipio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fijo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            
            <td>
                 <div class="dropdown">
                    <button type="button" data-toggle="dropdown" class="btn btn-primary dropdown-toggle" aria-haspopup="true" aria-expanded="true">Ver mas <span class="caret"></span></button>
                    <ul class="dropdown-menu" style="position: relative;">
                      <div class="d-grid gap-2 col-6 mx-auto">
                        <li><a asp-page="./Edit" asp-route-id="@item.Id">Editar</a></li>
                        <li><a asp-page="./Details" asp-route-id="@item.Id">Detalles</a></li>
                        <li><a asp-page="./Delete" asp-route-id="@item.Id">Eliminar</a></li>
                      </div>  
                    </ul>
                </div>
            
            </td>
        </tr>
}
    </tbody>
</table><br><br>
<div class="container" align="center">
    <img src="https://github.com/MarlonMena/ProyectoMintic/blob/main/Mintic.App/Iconos/Facebook.png?raw=true" align ="center" width="50" height="30" hspace="10">
    <img src="https://github.com/MarlonMena/ProyectoMintic/blob/main/Mintic.App/Iconos/Twitter.png?raw=true" align="center" width="50" height="30" hspace="10">
    <img src="https://github.com/MarlonMena/ProyectoMintic/blob/main/Mintic.App/Iconos/Youtube.png?raw=true" align="center" width="50" height="30" hspace="10">
    <img src="https://github.com/MarlonMena/ProyectoMintic/blob/main/Mintic.App/Iconos/Ayuda.png?raw=true" align="Right" width="50" height="30">
</div>