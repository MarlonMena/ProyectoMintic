@page
@model Mintic.App.Presentacion.Pages.CrudPersona.CreateModel

@{
    ViewData["Title"] = "CrearPersonas";
}

<h1>Crear Personas</h1>
<div class="alert alert-info" role="alert">
   Digite los datos y luego haga clic en el botón enviar para guardar el registro.
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Persona.Nombres" class="control-label" required>Nombre(s)</label>
                <input asp-for="Persona.Nombres" class="form-control" placeholder="Nombres de la persona" />
                <span asp-validation-for="Persona.Nombres" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Persona.Apellidos" class="control-label">Apellido(s)</label>
                <input asp-for="Persona.Apellidos" class="form-control" placeholder="Apellidos de la persona" />
                <span asp-validation-for="Persona.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Codigo" class="control-label">Código</label>
                <input asp-for="Persona.Codigo" class="form-control" placeholder="Ej: E-001"/>
                <span asp-validation-for="Persona.Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.RolPersona" class="control-label">Rol</label>
                <input asp-for="Persona.RolPersona" class="form-control"/>
                <span asp-validation-for="Persona.RolPersona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Edad" class="control-label">Edad</label>
                <input type="number" maxlength="2" asp-for="Persona.Edad" class="form-control" placeholder="Digite la edad en años"/>
                <span asp-validation-for="Persona.Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Cedula" class="control-label">Documento de identidad</label>
                <input asp-for="Persona.Cedula" class="form-control" placeholder="Número de documento de la persona"/>
                <span asp-validation-for="Persona.Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Email" class="control-label">Email</label>
                <input type="email" asp-for="Persona.Email" class="form-control" placeholder="Correo electrónico de la persona"/>
                <span asp-validation-for="Persona.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Celular" class="control-label">Celular</label>
                <input type="number" minlength="10" maxlength="10" asp-for="Persona.Celular" class="form-control" placeholder="Número de celular"/>
                <span asp-validation-for="Persona.Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Municipio" class="control-label">Municipio</label>
                <input asp-for="Persona.Municipio" class="form-control" placeholder="Municipio de recidencia"/>
                <span asp-validation-for="Persona.Municipio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Departamento" class="control-label">Departamento</label>
                <input asp-for="Persona.Departamento" class="form-control" placeholder="Departamento de recidencia"/>
                <span asp-validation-for="Persona.Departamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Fijo" class="control-label">Fijo</label>
                <input asp-for="Persona.Fijo" class="form-control" placeholder="Teléfono fijo" />
                <span asp-validation-for="Persona.Fijo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Direccion" class="control-label">Dirección</label>
                <input asp-for="Persona.Direccion" class="form-control" placeholder="Dirección de recidencia"/>
                <span asp-validation-for="Persona.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Usuario" class="control-label">Usuario</label>
                <input asp-for="Persona.Usuario" class="form-control" placeholder="Usuario a asignar"/>
                <span asp-validation-for="Persona.Usuario" class="text-danger"></span>
            </div>

            <!--<div class="form-group">
                <label asp-for="Persona.Password" class="control-label"></label>
                <input asp-for="Persona.Password" class="form-control" type="password"/>
                <span asp-validation-for="Persona.Password" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Atras</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
