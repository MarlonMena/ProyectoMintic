@page
@model Mintic.App.Presentacion.Pages.CambiarPasswordModel
@{
}
<style>
  body {
      background: url("https://github.com/MarlonMena/ProyectoMintic/blob/main/Mintic.App/Iconos/Background.png?raw=true"); 
      background-size: 60;
	  background-repeat: no-repeat;
      background-position: 12%;
 }
 </style>
<div >
    <br><br><br><br><br><br><br>
    <h4>Cambia tu contraseña</h4>
    <br>
</div>

<div class="row">
    <form method="post">
        <div class="form-group">
            <label class="control-label">Contraseña:</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Digite la contraseña"></input>
        </div>

        <div class="form-group">
            <label class="control-label">Confirme la Contraseña:</label>
            <input type="password" class="form-control" asp-for="RepeatPassword" placeholder="Repita la contraseña"></input>
            <span class="text-danger"> @Model.Mensaje</span>
        </div>

        <div class="form-group">
            <input type="submit" value="Cambiar" class="btn btn-primary"></input>
            <a asp-page="Login" class="btn btn-secondary">Cancelar</a>
        </div>
            
    </form>
</div>
