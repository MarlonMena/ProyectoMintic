@page
@model Mintic.App.Presentacion.Pages.CambiarPasswordModel
@{
}
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label class="control-label">Contraseña:</label>
                <input type="password" class="form-control" asp-for="Password"></input>
            </div>

            <div class="form-group">
                <label class="control-label">Confirme la Contraseña:</label>
                <input type="password" class="form-control" asp-for="RepeatPassword"></input>
                <span class="text-danger"> @Model.Mensaje</span>
            </div>

            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-primary"></input>
            </div>
        </form>
    </div>
</div>